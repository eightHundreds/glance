{
  "manifest_version": 3,
  "name": "Glance",
  "description": "拖拽链接即可弹出快速预览窗口。",
  "version": "0.0.65",
  "icons": {
    "48": "assets/icon.png",
    "96": "assets/icon.png",
    "128": "assets/icon.png"
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "options_page": "options-page.html",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "permissions": [
    "declarativeNetRequest",
    "storage"
  ]
}
